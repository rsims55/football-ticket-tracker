[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "cfb-tix"
version = "0.1.0"
description = "College Football Ticket Price Tracker"
readme = "README.md"
requires-python = ">=3.9"
authors = [{ name = "Randi Sims" }]
license = { text = "Proprietary" }

# Core + GUI/runtime deps
dependencies = [
  "pandas>=1.5",
  "numpy>=1.23",
  "PyQt5>=5.15,<6",
  "matplotlib>=3.6",
  "apscheduler>=3.10",
  "requests>=2.31",
  "beautifulsoup4>=4.12",
  "joblib>=1.3",
  "scikit-learn>=1.5",
  "python-dotenv>=1.0",
  "tzlocal>=5.2",
  "tomli; python_version < '3.11'"
]

[project.optional-dependencies]
scrape = ["cloudscraper>=1.2.71"]
dev = ["build>=1.2", "twine>=5.0"]

[project.scripts]
cfb-tix = "cfb_tix.daemon:main"
cfb-tix-gui = "cfb_tix.daemon:gui"

[tool.setuptools]
package-dir = { "" = "src" }
include-package-data = true

[tool.setuptools.packages.find]
where = ["src"]
# If these subpackages exist (with __init__.py), they'll be included.
include = [
  "cfb_tix*",
  "builders*",
  "fetchers*",
  "gui*",
  "modeling*",
  "reports*",
  "scrapers*"
]

# Ship non-.py assets (icons/templates/etc.)
[tool.setuptools.package-data]
cfb_tix = ["**/*.*"]
gui = ["**/*.*"]
